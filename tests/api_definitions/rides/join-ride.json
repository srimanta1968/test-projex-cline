{
  "endpoint": "/api/rides/:id/join",
  "method": "POST",
  "description": "Join an existing ride as a passenger",
  "requiresAuth": true,
  "tags": ["rides", "joining"],
  "testCases": [
    {
      "name": "Happy path - join ride successfully",
      "pathParams": {
        "id": "{{cache:ride.id}}"
      },
      "expectedStatus": 200,
      "expectedResponse": {
        "success": true,
        "message": "Successfully joined the ride",
        "data": {
          "ride_id": "{{cache:ride.id}}",
          "user_id": "{{cache:auth.user_id}}",
          "status": "active",
          "joined_at": "2024-01-15T10:30:00Z",
          "ride": {
            "id": "{{cache:ride.id}}",
            "origin": {
              "latitude": 37.7749,
              "longitude": -122.4194,
              "address": "123 Main St, San Francisco, CA"
            },
            "destination": {
              "latitude": 37.7849,
              "longitude": -122.4094,
              "address": "456 Market St, San Francisco, CA"
            },
            "seats_available": 2,
            "price_per_seat": 15.50,
            "status": "active"
          }
        }
      }
    }
  ]
}
