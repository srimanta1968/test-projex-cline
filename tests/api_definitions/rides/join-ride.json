{
  "endpoint": "/api/rides/:id/join",
  "method": "POST",
  "description": "Join an existing ride as a passenger",
  "requiresAuth": true,
  "tags": ["rides", "joining"],
  "testCases": [
    {
      "name": "Happy path - join ride successfully",
      "pathParams": {
        "id": "ride-uuid-format"
      },
      "expectedStatus": 200,
