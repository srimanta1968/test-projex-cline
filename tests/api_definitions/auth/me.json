{
  "endpoint": "/api/auth/me",
  "method": "GET",
  "description": "Get current authenticated user's profile information",
  "requiresAuth": true,
  "tags": ["auth", "profile", "user"],
  "testCases": [
    {
      "name": "Happy path - get user profile",
      "headers": {
        "Authorization": "Bearer valid-jwt-token"
      },
      "expectedStatus": 200,
      "expectedResponse": {
        "success": true,
        "data": {
          "id": "uuid-format-id",
          "email": "user@example.com",
          "username": "johndoe",
          "first_name": "John",
          "last_name": "Doe",
          "verified": false,
          "created_at": "timestamp-format",
          "updated_at": "timestamp-format"
        }
      }
    },
    {
      "name": "Unauthorized - missing token",
      "expectedStatus": 401,
      "expectedResponse": {
        "success": false,
        "error": "Access token is required"
      }
    },
    {
      "name": "Unauthorized - invalid token",
      "headers": {
        "Authorization": "Bearer invalid-jwt-token"
      },
      "expectedStatus": 401,
      "expectedResponse": {
        "success": false,
        "error": "Invalid token"
      }
    }
  ]
}
