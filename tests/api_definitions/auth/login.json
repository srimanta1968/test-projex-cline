{
  "endpoint": "/api/auth/login",
  "method": "POST",
  "description": "Authenticate user with email/username and password, return JWT tokens",
  "requiresAuth": false,
  "tags": ["auth", "login", "tokens"],
  "testCases": [
    {
      "name": "Happy path - successful login",
      "payload": {
        "identifier": "{{cache:auth.email}}",
        "password": "{{cache:auth.password}}"
      },
      "expectedStatus": 200,
      "expectedResponse": {
        "success": true,
        "message": "Login successful",
        "data": {
          "user": {
            "id": "123e4567-e89b-12d3-a456-426614174000",
            "email": "{{cache:auth.email}}",
            "username": "{{cache:auth.username}}",
            "first_name": "John",
            "last_name": "Doe",
            "verified": false,
            "created_at": "2024-01-15T10:30:00Z",
            "updated_at": "2024-01-15T10:30:00Z"
          },
          "tokens": {
            "accessToken": "jwt-token-format",
            "tokenType": "Bearer",
            "expiresIn": 604800
          }
        }
      }
    }
  ]
}
