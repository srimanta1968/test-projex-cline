{
  "endpoint": "/api/auth/login",
  "method": "POST",
  "description": "Authenticate user with email/username and password, return JWT tokens",
  "requiresAuth": false,
  "tags": ["auth", "login", "tokens"],
  "testCases": [
    {
      "name": "Happy path - successful login with email",
      "payload": {
        "identifier": "user@example.com",
        "password": "SecurePass123!"
      },
      "expectedStatus": 200,
      "expectedResponse": {
        "success": true,
        "message": "Login successful",
        "data": {
          "user": {
            "id": "uuid-format-id",
            "email": "user@example.com",
            "username": "johndoe",
            "first_name": "John",
            "last_name": "Doe",
            "verified": false,
            "created_at": "timestamp-format",
            "updated_at": "timestamp-format"
          },
          "tokens": {
            "accessToken": "jwt-token-format",
            "tokenType": "Bearer",
            "expiresIn": 3600
          }
        }
      }
    },
    {
      "name": "Login with username instead of email",
      "payload": {
        "identifier": "johndoe",
        "password": "SecurePass123!"
      },
      "expectedStatus": 200,
      "expectedResponse": {
        "success": true,
        "message": "Login successful"
      }
    },
    {
      "name": "Invalid credentials",
      "payload": {
        "identifier": "nonexistent@example.com",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedResponse": {
        "success": false,
        "error": "Invalid email/username or password"
      }
    }
  ]
}
