{
  "endpoint": "/api/auth/register",
  "method": "POST",
  "description": "Register a new user with email, username, and password",
  "requiresAuth": false,
  "tags": ["auth", "user", "registration"],
  "testCases": [
    {
      "name": "Happy path - successful registration",
      "payload": {
        "email": "user@example.com",
        "username": "johndoe",
        "password": "SecurePass123!",
        "first_name": "John",
        "last_name": "Doe"
      },
      "expectedStatus": 201,
      "expectedResponse": {
        "success": true,
        "message": "User registered successfully",
        "data": {
          "id": "uuid-format-id",
          "email": "user@example.com",
          "username": "johndoe",
          "first_name": "John",
          "last_name": "Doe",
          "verified": false,
          "created_at": "timestamp-format"
        }
      }
    }
  ]
}
