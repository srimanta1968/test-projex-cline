{
  "mcpServers": {
    "projexlight-mcp": {
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "mcp-server/docker-compose.yml",
        "exec",
        "-T",
        "mcp-server",
        "python",
        "server.py"
      ],
      "env": {
        "MCP_SERVER_URL": "http://localhost:8766"
      },
      "alwaysAllow": [
        "scan_duplicates",
        "register_api",
        "update_progress",
        "get_coding_standards"
      ],
      "disabled": false
    }
  }
}